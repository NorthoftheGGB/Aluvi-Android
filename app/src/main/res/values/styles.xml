<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/white</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.Dark.DarkAccent">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScheduleRideButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/schedule_ride_button_background</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="ScheduleRideButtonStyle.Light">
        <item name="android:background">@drawable/schedule_ride_button_background_light</item>
    </style>

    <style name="ScheduleRideButtonStyle.ExtraLight">
        <item name="android:background">@drawable/schedule_ride_button_background_extra_light</item>
    </style>

    <style name="ScheduleRideButtonStyle.Dark">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ErrorButton" parent="@android:style/Widget.Button">
        <item name="colorButtonNormal">@color/errorButtonBackground</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ErrorButton.Large">
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:height">60dp</item>
    </style>

    <style name="AluviButton" parent="@android:style/Widget.Button">
        <item name="colorButtonNormal">@color/successButtonBackground</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AluviButton.Large">
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:height">60dp</item>
    </style>

    <style name="TransparentButton">
        <item name="android:background">@drawable/transparent_button_background</item>
        <item name="android:textColor">@drawable/transparent_button_text_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="OnboardingButton">
        <item name="android:height">60dp</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
        <item name="android:textColor">@drawable/onboarding_button_text_color</item>
        <item name="android:background">@drawable/onboarding_button_background</item>
    </style>

    <style name="BorderlessPreferenceContainer">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/md_btn_selector</item>
    </style>

    <style name="PreferenceTitle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="PreferenceContent">
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>
</resources>
