<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/payment_info_text_view_amount_spent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Button
        android:id="@+id/payment_info_button_pay_to"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/payment_info_text_view_amount_spent"
        android:layout_marginTop="8dp"
        android:drawableLeft="@mipmap/ic_credit_card"
        android:drawablePadding="16dp"
        android:gravity="left|center_vertical"
        android:text="Pay with Visa ending in"/>

    <View
        android:id="@+id/payment_info_view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/payment_info_button_pay_to"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="@android:color/white"/>

    <Button
        android:id="@+id/payment_info_button_pay_withdraw"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/payment_info_view_divider"
        android:drawableLeft="@mipmap/ic_credit_card"
        android:drawablePadding="16dp"
        android:gravity="left|center_vertical"
        android:text="Get paid to Mastercard ending in "/>

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/payment_info_view_divider"
        android:layout_alignStart="@+id/payment_info_view_divider"
        android:layout_below="@+id/payment_info_button_pay_withdraw"
        android:layout_marginTop="16dp"
        android:text="@string/withdraw_anytime"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/payment_info_text_view_last_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView14"
        android:layout_alignStart="@+id/textView14"
        android:layout_below="@+id/textView14"
        android:layout_marginTop="8dp"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
</RelativeLayout>