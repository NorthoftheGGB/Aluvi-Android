<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/aluvi_background_gradient_about_user">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/onboarding_about_button_next"
        android:gravity="center_vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/onboarding_image_view_profile_picture"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:src="@mipmap/test_profile_pic"/>

        <Button
            android:id="@+id/onboarding_about_button_take_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/onboarding_image_view_profile_picture"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="20dp"
            android:text="@string/take_photo"
            android:theme="@style/AluviButton.Large"/>

        <Button
            android:id="@+id/onboarding_about_button_choose_existing_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/onboarding_about_button_take_photo"
            android:layout_alignLeft="@+id/onboarding_about_button_take_photo"
            android:layout_alignRight="@+id/onboarding_about_button_take_photo"
            android:layout_alignStart="@+id/onboarding_about_button_take_photo"
            android:layout_below="@+id/onboarding_about_button_take_photo"
            android:text="@string/choose_existing"
            android:theme="@style/AluviButton.Large"/>
    </RelativeLayout>

    <Button
        android:id="@+id/onboarding_about_button_next"
        style="@style/OnboardingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:text="@string/next"/>
</RelativeLayout>