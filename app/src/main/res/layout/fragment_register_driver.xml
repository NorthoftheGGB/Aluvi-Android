<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/aluvi_background_gradient_location_select">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/onboarding_register_driver_button_next"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            fontPath="fonts/Bryant-Regular.ttf"
            android:text="@string/car_details"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/layout_register_driver"
            android:layout_below="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:id="@+id/onboaring_driver_registration_root_view"/>

    </RelativeLayout>

    <Button
        android:id="@+id/onboarding_register_driver_button_next"
        style="@style/AluviFullWidthButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:text="@string/next"/>
</RelativeLayout>