<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/navigation_drawer_header_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:ignore="MissingPrefix">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/navigation_drawer_header_profile_picture_view"
        android:layout_width="@dimen/medium_profile_picture_width"
        android:layout_height="@dimen/medium_profile_picture_height"
        android:layout_alignEnd="@+id/driver_divider"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/driver_divider"
        android:src="@mipmap/profile_picture_placeholder"
        app:border_color="@color/black"
        app:border_width="1dp"/>

    <TextView
        android:id="@+id/navigation_drawer_header_text_view_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_toEndOf="@+id/navigation_drawer_header_profile_picture_view"
        android:layout_toRightOf="@+id/navigation_drawer_header_profile_picture_view"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textView7"
        fontPath="fonts/Bryant-Regular.ttf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/navigation_drawer_header_text_view_user_name"
        android:layout_alignStart="@+id/navigation_drawer_header_text_view_user_name"
        android:layout_below="@+id/navigation_drawer_header_text_view_user_name"
        android:text="@string/profile"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"/>
</RelativeLayout>