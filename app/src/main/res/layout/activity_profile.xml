<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/aluvi_background_gradient"
                tools:context="com.aluvi.android.activities.ProfileActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image_view"
        android:layout_width="@dimen/medium_profile_picture_width"
        android:layout_height="@dimen/medium_profile_picture_height"
        android:layout_above="@+id/profile_text_view_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:src="@mipmap/test_profile_pic"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    <TextView
        android:id="@+id/profile_text_view_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:fontFamily="sans-serif-light"
        android:text="Name Placeholder"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"/>

    <Button
        android:id="@+id/profile_button_save"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/relativeLayout"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/relativeLayout"
        android:background="@drawable/aluvi_background_gradient_selector"
        android:fontFamily="sans-serif-light"
        android:text="@string/save"
        android:textColor="@color/white"
        android:textSize="@dimen/abc_text_size_large_material"/>

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profile_button_save"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/light_white_background">

        <EditText
            android:id="@+id/profile_edit_text_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textView2"
            android:layout_alignLeft="@+id/textView2"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/textView2"
            android:layout_alignStart="@+id/textView2"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:ems="10"
            android:hint="@string/email"
            android:inputType="textEmailAddress"/>

        <EditText
            android:id="@+id/profile_edit_text_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/profile_edit_text_email"
            android:layout_alignLeft="@+id/profile_edit_text_email"
            android:layout_alignRight="@+id/profile_edit_text_email"
            android:layout_alignStart="@+id/profile_edit_text_email"
            android:layout_below="@+id/profile_edit_text_email"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"/>

        <EditText
            android:id="@+id/profile_edit_text_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/profile_edit_text_password"
            android:layout_alignLeft="@+id/profile_edit_text_password"
            android:layout_alignRight="@+id/profile_edit_text_password"
            android:layout_alignStart="@+id/profile_edit_text_password"
            android:layout_below="@+id/profile_edit_text_password"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="@string/phone_number"
            android:inputType="phone"/>

        <EditText
            android:id="@+id/profile_edit_text_work_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/profile_edit_text_phone_number"
            android:layout_alignLeft="@+id/profile_edit_text_phone_number"
            android:layout_alignRight="@+id/profile_edit_text_phone_number"
            android:layout_alignStart="@+id/profile_edit_text_phone_number"
            android:layout_below="@+id/profile_edit_text_phone_number"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="@string/work_email"
            android:inputType="textEmailAddress"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_edit_text_work_email"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_horizontal"
            android:text="@string/terms_services"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/aluvi_gradient_end"/>
    </RelativeLayout>
</RelativeLayout>
