<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                tools:context="com.aluvi.android.fragments.TicketInfoFragment">

    <TextView
        android:id="@+id/ticket_info_text_view_price_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/ticketInfoPriceBackground"
        android:paddingBottom="5dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/ticket_info_text_view_car_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ticket_info_text_view_price_info"
        android:layout_alignStart="@+id/ticket_info_text_view_price_info"
        android:layout_below="@+id/ticket_info_text_view_price_info"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/ticket_info_text_view_car_license_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ticket_info_text_view_car_name"
        android:layout_alignStart="@+id/ticket_info_text_view_car_name"
        android:layout_below="@+id/ticket_info_text_view_car_name"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ticket_info_image_view_driver_profile"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ticket_info_text_view_car_name"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/ticket_info_text_view_car_license_number"
        android:layout_toRightOf="@+id/ticket_info_text_view_car_license_number"
        app:border_color="#FF000000"
        app:border_width="2dp"/>

    <TextView
        android:id="@+id/ticket_info_text_view_driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ticket_info_text_view_car_license_number"
        android:layout_alignStart="@+id/ticket_info_text_view_car_license_number"
        android:layout_below="@+id/ticket_info_text_view_car_license_number"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/horizontalScrollView"
        android:layout_alignLeft="@+id/ticket_info_text_view_driver_name"
        android:layout_alignStart="@+id/ticket_info_text_view_driver_name"
        android:layout_below="@+id/ticket_info_image_view_driver_profile"
        android:layout_alignRight="@+id/ticket_info_image_view_driver_profile"
        android:layout_alignEnd="@+id/ticket_info_image_view_driver_profile"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ticket_info_image_view_driver_profile"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:id="@+id/ticket_info_container_rider_info">
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>
