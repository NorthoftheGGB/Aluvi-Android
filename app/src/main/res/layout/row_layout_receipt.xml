<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/receipt_text_view_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        fontPath="fonts/Bryant-Regular.ttf"
        android:text="Fare"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/receipt_text_view_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/receipt_text_view_type"
        android:layout_marginLeft="16dp"
        fontPath="fonts/Bryant-Regular.ttf"
        android:layout_toEndOf="@+id/receipt_text_view_type"
        android:layout_toRightOf="@+id/receipt_text_view_type"
        android:gravity="right"
        android:text="$100"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
</RelativeLayout>